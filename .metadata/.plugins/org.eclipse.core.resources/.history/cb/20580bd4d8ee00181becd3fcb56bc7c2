			con = Conexion.Conectar();
			st = con.createStatement();
			rs = st.executeQuery(sql);
			while (rs.next()){
				
			}
		} catch (Exception ex) {
			ex.printStackTrace();
		} finally{
			try {
				if(rs != null) rs.close();
				if(st != null) st.close();
				if(con != null) con.close();
			} catch (Exception ex) {
				ex.printStackTrace();
			}
		}
		
		return lista;
	}
	
