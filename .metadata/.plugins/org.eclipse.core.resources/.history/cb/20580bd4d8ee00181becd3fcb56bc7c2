	public ArrayList<Trabajador> Listar(){
		ArrayList<Trabajador> lista = new ArrayList<Trabajador>();
		
		sql = "SELECT ID,Nombre,Apellido,Telefono,DNI,Email, Direccion, Usuario, Contrasenia,Sexo, Rol FROM Trabajador";
		
